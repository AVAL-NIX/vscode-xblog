{
    "name": "xblog",
    "displayName": "xblog",
    "description": "提升写日记效率,用与自定义项目对接",
    "version": "1.2.2",
    "publisher": "avalon",
    "engines": {
        "vscode": "^1.33.0"
    },
    "categories": [
        "Other"
    ],
    "bugs": {
        "url": "https://github.com/AVAL-NIX"
    },
    "homepage": "https://github.com/AVAL-NIX/vscode-xblog/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/AVAL-NIX/vscode-xblog"
    },
    "icon": "images/icon.png",
    "activationEvents": [
        "onCommand:extension.publishBlog",
        "onCommand:extension.searchBlog",
        "onCommand:extension.uploadImg",
        "onCommand:extension.copyImg",
        "onLanguage:markdown"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.publishBlog",
                "title": "public blog 发布 "
            },
            {
                "command": "extension.searchBlog",
                "title": "search blog 搜索"
            },
            {
                "command": "extension.uploadImg",
                "title": "upload image blog 上传图片"
            },
            {
                "command": "extension.copyImg",
                "title": "copy image blog 粘贴图片"
            }
        ],
        "keybindings": [
            {
                "command": "extension.copyImg",
                "key": "ctrl+alt+i",
                "mac": "cmd+alt+i",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "xblog",
            "properties": {
                "xblog.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "是否启用xblog"
                },
                "xblog.accessToken": {
                    "type": "string",
                    "default": "",
                    "description": "授权访问凭证"
                },
                "xblog.api": {
                    "type": "string",
                    "default": "http://localhost:8080",
                    "description": "xblog Api 请求根路径"
                },
                "xblog.publishUri": {
                    "type": "string",
                    "default": "/article/public",
                    "description": "发布文档Uri地址"
                },
                "xblog.searchUri": {
                    "type": "string",
                    "default": "/article/search",
                    "description": "搜索文档Uri地址"
                },
                "xblog.uploadImageUri": {
                    "type": "string",
                    "default": "/file/upload",
                    "description": "上传图片Uri地址"
                },
                "xblog.localPath": {
                    "type": "string",
                    "default": "./blogImage",
                    "description": "图片本地保存位置"
                },
                "xblog.isQiNiu": {
                    "type": "boolean",
                    "default": false,
                    "description": "是否是七牛云存储,默认不是"
                },
                "xblog.domain": {
                    "type": "string",
                    "default": "",
                    "description": "七牛云访问路径"
                },
                "xblog.ACCESS_KEY": {
                    "type": "string",
                    "default": "",
                    "description": "七牛云AccessKey"
                },
                "xblog.SECRET_KEY": {
                    "type": "string",
                    "default": "",
                    "description": "七牛云SecretKey "
                },
                "xblog.bucket": {
                    "type": "string",
                    "default": "",
                    "description": "七牛云空间名"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.3.1",
        "vscode": "^1.1.28",
        "tslint": "^5.12.1",
        "@types/node": "^10.12.21",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "front-matter": "^3.0.2",
        "jimp": "^0.6.1",
        "lodash": "^4.17.11",
        "moment": "^2.29.2",
        "qiniu": "^7.2.2",
        "request": "^2.88.0"
    }
}
